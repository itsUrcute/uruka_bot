{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  
  
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node",
    "allowJs": true
  },

  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
    "includes": ["./src/**/*.ts"]

  }